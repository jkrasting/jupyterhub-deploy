# Dockerfile.notebook - Custom notebook image with Dask extension and remote_ikernel
FROM jupyter/scipy-notebook:latest

USER root

USER ${NB_UID}

# Install Dask labextension and remote_ikernel
RUN pip install --no-cache-dir dask-labextension remote_ikernel

# Pre-build JupyterLab to include the extension
RUN jupyter lab build

USER root
